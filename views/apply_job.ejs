<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="icon" href="https://img.icons8.com/?size=100&id=kIDi0DHdQ1W0&format=png&color=000000"
          type="image/x-icon">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/apply_job.css'/>
    <title><%= title %></title>

</head>
<body>

<!-- Job description form -->
<div class="container mt-5 mb-5">
    <h2><%= job.title %></h2>
    <form id="job-form" action="/apply_job/submit_application/<%= user.id %>/<%= job.id %>" method="POST"
          enctype="multipart/form-data">
        <!-- Title Field -->
        <% job_fields.forEach(field => { %>
        <div class="mb-3">
            <label for="<%= field.field_name %>" class="form-label"><%= field.field_name %></label>

            <input type="<%= field.field_type %>" class="form-control" id="<%= field.field_name %>"
                   name="<%= field.field_name %>" <%= field.is_required ? 'required' : '' %> <%= field.field_type === 'file' ? 'accept=.pdf,.doc,.docx,.txt' : '' %>>

        </div>
        <% }) %>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

<script>


</script>


</body>
</html>
